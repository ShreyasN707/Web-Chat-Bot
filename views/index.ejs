<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Gemini Chat</title>
  <style>
    /* Global dark theme */
    body {
      background-color: #0f0f0f;
      color: #f5f5f5;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 100vh;
      padding: 20px;
      margin: 0;
    }

    h1 {
      font-size: 2.5rem;
      color: #7abaff;
      margin-bottom: 20px;
      text-align: center;
      letter-spacing: 1px;
    }

    .chat-container {
      background-color: #1c1c1c;
      border-radius: 18px;
      padding: 30px 25px;
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.8);
      width: 100%;
      max-width: 550px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    input[type="text"] {
      padding: 16px 18px;
      border: 1px solid #333;
      border-radius: 12px;
      font-size: 17px;
      background-color: #262626;
      color: #f5f5f5;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    input[type="text"]:focus {
      border-color: #7abaff;
      outline: none;
      box-shadow: 0 0 10px rgba(122, 186, 255, 0.4);
    }

    button {
      padding: 15px;
      border: none;
      border-radius: 12px;
      background: linear-gradient(135deg, #7abaff, #64b5f6);
      color: #121212;
      font-size: 17px;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    button:hover {
      background: linear-gradient(135deg, #64b5f6, #42a5f5);
      transform: scale(1.03);
    }

    button:active {
      transform: scale(0.98);
    }

    button:disabled {
      background: #555;
      cursor: not-allowed;
    }

    .output-box {
      background-color: #262626;
      border-radius: 12px;
      padding: 18px;
      min-height: 150px;
      color: #f5f5f5;
      white-space: pre-wrap;
      word-wrap: break-word;
      font-size: 16px;
      line-height: 1.6;
      border: 1px solid #333;
      position: relative;
    }

    .spinner {
      border: 4px solid rgba(255, 255, 255, 0.1);
      border-left-color: #7abaff;
      border-radius: 50%;
      width: 36px;
      height: 36px;
      animation: spin 1s linear infinite;
      margin: 10px auto;
      display: none;
    }

    .spinner.active {
      display: block;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    @media (max-width: 600px) {
      h1 {
        font-size: 2rem;
      }

      .chat-container {
        padding: 25px 15px;
      }

      input[type="text"] {
        font-size: 16px;
      }

      button {
        font-size: 16px;
        padding: 13px;
      }
    }
  </style>
</head>
<body>

  <h1>BLOBER-G</h1>
  <div class="chat-container">
    <form id="chatForm" action="/" method="POST">
      <input type="text" name="prompt" id="promptInput" placeholder="Type your message here..." required />
      <button type="submit" id="submitBtn">Start Chat</button>
    </form>

    <div class="output-box" id="outputBox">
      <%= reply||' ' %>
    </div>

    <div class="spinner" id="spinner"></div>
  </div>

  <script>
    const form = document.getElementById('chatForm');
    const spinner = document.getElementById('spinner');
    const submitBtn = document.getElementById('submitBtn');
    const promptInput = document.getElementById('promptInput');

    form.addEventListener('submit', () => {
      spinner.classList.add('active');
      submitBtn.disabled = true;
      submitBtn.textContent = 'Loading...';
    });

    window.addEventListener('pageshow', () => {
      promptInput.value = '';
      submitBtn.disabled = false;
      submitBtn.textContent = 'Start Chat';
      spinner.classList.remove('active');
    });
  </script>

</body>
</html>
